{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/api",
        "main": "apps/api/src/main.ts",
        "tsConfig": "apps/api/tsconfig.app.json",
        "assets": ["apps/api/src/assets"],
        "webpackConfig": "apps/api/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "typeorm": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "ts-node --project tsconfig.app.json ../../node_modules/typeorm/cli",
        "cwd": "apps/api"
      }
    },
    "migration-generate": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "nx run api:typeorm migration:generate ./migrations/{args.name} -d ./src/app/typeorm/typeorm.config.ts",
        "cwd": "apps/api"
      }
    },
    "migrations-run": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "nx run api:typeorm migration:run -d ./src/app/typeorm/typeorm.config.ts",
        "cwd": "apps/api"
      }
    },
    "migration-revert": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "nx run api:typeorm migration:revert -d ./src/app/typeorm/typeorm.config.ts",
        "cwd": "apps/api"
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development"
        },
        "production": {
          "buildTarget": "api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/api/jest.config.ts"
      }
    }
  },
  "tags": []
}
